<Page x:Class="VA_Leo.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VA_Leo"
      mc:Ignorable="d" 
      d:DesignHeight="560" d:DesignWidth="850"
      Title="Home" Width="850" Height="560" Background="#FF161616">

    <Grid>
        
        <Image x:Name="logo" HorizontalAlignment="Center" Height="213" VerticalAlignment="Top" Width="214" Margin="0,98,0,0" Source="/assets/images/dragon.png">
            <Image.Effect>
                <DropShadowEffect BlurRadius="990" Color="#FFFF" Opacity="0.4"/>
            </Image.Effect>
        </Image>

        <Label Content="Ассистент Лео" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="58" 
               Margin="168,338,0,0" FontFamily="Montserrat Alternates" FontWeight="Bold" Foreground="White"/>
        <Label Content="Простой голосовой помощник для Windows" HorizontalAlignment="Center" FontSize="14" Foreground="#FFCECECE" 
               FontFamily="Montserrat Alternates" Margin="0,404,0,0" VerticalAlignment="Top" />
    </Grid>
</Page>
