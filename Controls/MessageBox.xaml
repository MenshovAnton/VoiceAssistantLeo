<UserControl x:Class="VA_Leo.Controls.UserMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VA_Leo.Controls"
             mc:Ignorable="d" Height="50" Width="300">
    <Grid>
        <Rectangle HorizontalAlignment="Left" Height="44" Margin="3,0,0,0" VerticalAlignment="Center" Width="272" RadiusX="10" RadiusY="10" Fill="White"/>
        <Label Content="{Binding Message}" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center"/>
        <Label Content="{Binding Time}" HorizontalAlignment="Left" Margin="245,28,0,0" VerticalAlignment="Top" FontSize="8" Height="19" Width="30" Foreground="#FF4C4C4C"/>
    </Grid>
</UserControl>
